<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <property name="pattern_0">
            %d{yyyy:MM-dd HH:mm:ss} [%t] %-5level %logger{8} - %msg%n
        </property>
        <property name="pattern_1">
            %d{yyyy:MM-dd HH:mm:ss} [%t] %-5level %logger{8} - %msg%n
        </property>
    </Properties>
    <Appenders>
        <File name="LogFile" fileName="eproject/data/text.log" bufferedIO="true">
            <PatternLayout pattern="${pattern_0}"/>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern_1}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="LogFile" level = "debug"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>